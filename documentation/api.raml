                            "city": "Košice",
                            "zip": "04001",
                            "country": "Slovakia"
                        }
                  }
              }
  /info:
    get:
      description: "Získanie rýchleho prehľadu košíka"
      responses:
        200:
          body:
            application/json:
              example: |
                {
                  "status" : "OK",
                  "data" : {

                        "count" : 4,
                        "price" : 20.04

                    }
                }
              schema: !include schemas/cart-info-response.schema.json
  /deliverypayment:
    get:
      responses:
        200:
          body:
            application/json:
              example: |
                {
                  "status": "OK",
                  "data":{
                        "delivery_opts":[
                            {
                                "id": "KURIER",
                                "price": 2.50
                            },
                            {
                                "id": "OSOBNY_ODBER",
                                "price": 0
                            }
                        ],
                        "payment_opts":[
