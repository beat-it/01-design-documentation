                          "first_name": "Ladislav",
                          "surname": "Perduk",
                          "email": "perduk@bart.sk",
                          "phone": "0900900900"
                        },
                        "billing_address": {
                            "address": "Lomnická 22",
                            "city": "Košice",
                            "zip": "04001",
                            "country": "Slovakia",
                            "company": {
                                  "name": "ZiZi s.r.o.",
                                  "dic": "000000000000",
                                  "ico": "000000000000",
                                  "ic_dph": "SK000000000000"
                              }
                        },
