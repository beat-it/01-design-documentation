/cart:
  put:
    description: "Uloženie objektu objednávky. Po ukončení jednotlivých krokov objednávky sa odošle iba príslušná časť
                  celého objektu. Po prvom kroku objednávky sa odošle napr. iba delivery a payment"
    body:
      application/json:
        schema: !include schemas/cart-post.schema.json
        example: |
          {
            "delivery": "SPS",
            "payment": "DOBIERKA",
            "person": {
                "first_name": "Ladislav",
                "surname": "Perduk",
                "email": "perduk@bart.sk",
                "phone": "0900900900"
              },
              "billing_address": {
                  "address": "Lomnická 22",
                  "city": "Košice",
                  "zip": "04001",
                  "country": "Slovakia",
                  "company": {
                        "name": "ZiZi s.r.o.",
                        "dic": "000000000000",
                        "ico": "000000000000",
                        "ic_dph": "SK000000000000"
                    }
              },
              "delivery_address":{
                  "address": "Lomnická 22",
                  "city": "Košice",
                  "zip": "04001",
                  "country": "Slovakia"
              }
          }
