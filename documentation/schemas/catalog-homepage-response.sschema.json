{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "BEAT_IT Catalog homepage schema",
    "type": "object",
    "properties": {
        "product_list": {
          "type": "array",
          "properties": {
              "product_id":{
                  "type": "string"
              },
              "name": {
                  "type": "string"
              },
              "price": {
                  "type": "number"
              },
              "description": {
                  "type": "string"
              },
              "rating": {
                  "type": "integer",
                  "min": 0,
                  "max": 5
              },
              "currency":{
                  "type": "string"
              },
              "image":{
                  "type": "object",
                  "properties":{
                      "url" : {
                          "type": "string"
                      },
                      "thumbnail_url": {
                          "type": "string"
                      },
                      "catalog_url":{
                          "type": "string"
                      }
                  }
              }
          }
        }
    }
}
