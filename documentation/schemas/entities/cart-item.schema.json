    "properties": {
        "name": {
            "type": "string"
        },
        "image":{
            "type": "object",
            "properties":{
                "url" : {
                    "type": "string"
                },
                "thumbnail_url": {
                    "type": "string"
                },
                "catalog_url":{
                    "type": "string"
                }
